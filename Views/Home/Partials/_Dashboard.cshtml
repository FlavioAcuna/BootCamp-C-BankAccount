@model Transaction

<div class="container">
    <div class="row">
        <h1>Bienvenido,@ViewBag.NameAccount @ViewBag.ApellidoAcc
        </h1>

    </div>
    <div class="row">
        <h3 class="text-success">Current Balance: $@ViewBag.SaldoBanco</h3>
    </div>
    <div class="row">
        <form asp-action="DepositRetira" asp-controller="Home" method="post" asp-route-UserId="@ViewBag.UserId">
            <div class="row mb-4">
                <div class="col">
                    <h5><label asp-for="Amount">Depositar/Retirar</label></h5>
                </div>
                <div class="col">
                    <input asp-for="Amount">
                    <span asp-validation-for="Amount"></span>
                </div>
                <div class="col">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </div>
        </form>
    </div>
    <div class="row">
        <table class="table table-stripped table-bordered">
            <thead>
                <tr>
                    <th scope="col">Monto</th>
                    <th scope="col">Fecha</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var transaction in ViewBag.ListaTrans)
                {
                    <tr>
                        <td>$@transaction.Amount</td>
                        <td>@transaction.createdAt</td>
                    </tr>
                }


            </tbody>
        </table>
    </div>
</div>
